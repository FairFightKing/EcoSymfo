    <h1>{{ 'cart.edit'|trans }}</h1>
    <h2>{{ 'edit'|trans }} {{ 'product'|trans}} {{ cart_content.product.name }}</h2>
    <p>{{ 'price'|trans }} : {{ cart_content.product.price }} euros</p>
    <p>{{ 'Stock'|trans }} : {{ cart_content.product.Stock }}</p>
