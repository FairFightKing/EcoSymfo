{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table" border="1px">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.Name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.Description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.Price }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.Stock }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{ asset('/uploads/'~product.picture) }}" alt="" width="124px"></td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('product_index') }}">back to list</a>

    {% if is_granted('ROLE_USER') %}
        <h2>Add to Cart</h2>
        {{ include('product/_form.html.twig') }}
    {% endif %}
    <hr/>
    {% if is_granted('ROLE_ADMIN') %}
        <h2>Admin</h2>
        <a href="{{ path('product_edit', {'id': product.id}) }}"><button>edit</button></a>
        {{ include('product/_delete_form.html.twig') }}

    {% endif %}
{% endblock %}
